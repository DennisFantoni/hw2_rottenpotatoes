-#  This file is app/views/movies/index.html.haml
%h1 All Movies
%table#movies
  %thead
    %tr
      %th{:class=>@titlehilite}= link_to 'Movie Title', movies_path(:order=>'title'), :id=>'title_header'
      %th Rating
      %th{:class=>@datehilite}= link_to ' Release Date', movies_path(:order=>'release_date'), :id=>'release_date_header'
      %th More Info
      %th Action
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
        %td= link_to 'Edit', edit_movie_path(movie)

= link_to 'Add new movie', new_movie_path
